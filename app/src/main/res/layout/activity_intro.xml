<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/introPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/introPagerIndicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:radius="6sp"
        app:fillColor="@color/u_lgrey"
        app:pageColor="@color/u_grey"
        app:strokeWidth="0sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="108sp"/>

    <Button
        android:id="@+id/introFacebookButton"
        android:layout_width="fill_parent"
        android:layout_height="54sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_blue"
        android:textColor="@color/u_white"
        android:text="Sign up with Facebook" />

</RelativeLayout>